.component-list
    padding: 10px
    .music-list
        padding: 0px
        list-style: none
        .music-list-item
            &:hover
                background-color: #f6f6f6
            display: table
            width: 100%
            border-bottom: solid 1px #ddd
            line-height: 38px
            span
                display: table-cell
            .title
                width: 30%
                padding-left: 10px
            .artist
                font-size: 13px
                width: 60%
            .iconfont
                padding-right: 10px
                text-align: right
                cursor: pointer
        .active
            .title, .artist
                color: #009a61
    .back
        text-align: right
        a
            font-size: 12px
            color: #009a61
            text-decoration: none